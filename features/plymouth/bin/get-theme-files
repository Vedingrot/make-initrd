#!/bin/bash -efu
# SPDX-License-Identifier: GPL-3.0-or-later

name="$1"; shift

[ -n "$name" ] ||
	# PLYMOUTH_LIBDIR variable doesn't need to be ignored.
	name="$(env \
		-u PLYMOUTH_CONFDIR \
		-u PLYMOUTH_DATADIR \
		-u PLYMOUTH_LIBEXECDIR \
		-u PLYMOUTH_PLUGIN_PATH \
		-u PLYMOUTH_POLICYDIR \
		plymouth-set-default-theme 2>/dev/null ||:)"

themedir="$DATADIR/plymouth/themes/$name"
logodir="$DATADIR/design/current/icons"

[ -f "$themedir/$name.plymouth" ] ||
	exit 0

. shell-error

newline="
"
dirs="$newline$themedir$newline$logodir$newline"

get_files()
{
	find "$1" -type f
}

get_module()
{
	local fn l sect=
	while read -r l; do
		case "$l" in
			'[Plymouth Theme]') sect=1  ;;
			'['*)               sect='' ;;
			ModuleName*=*)
				[ -n "$sect" ] ||
					continue

				set -- ${l%%=*}

				[ "$*" = 'ModuleName' ] ||
					continue

				set -- ${l#*=}

				fn="$PLYMOUTH_LIBDIR/$*.so"

				[ -f "$fn" ] ||
					fatal "ModuleName: file not found: $fn"

				printf '%s\n' "$fn"
				;;
		esac
	done < "$themedir/$name.plymouth"
}

get_imagedir()
{
	local l
	while read -r l; do
		[ -n "$l" ] && [ -z "${l##ImageDir*=*}" ] ||
			continue

		set -- ${l%%=*}

		[ "$*" = 'ImageDir' ] ||
			continue

		set -- ${l#*=}

		[ -d "$*" ] ||
			fatal "ImageDir: directory not found: $fn"

		[ -n "${dirs##*$newline$1$newline*}" ] ||
			continue

		dirs="$dirs$*$newline"

		get_files "$*"
	done < "$themedir/$name.plymouth"
}

get_files "$themedir"
get_files "$logodir"
get_imagedir
get_module
